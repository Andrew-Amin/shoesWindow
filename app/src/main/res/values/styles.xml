<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="login_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:minHeight">48dp</item>

    </style>


    <style name="normal_text_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>




    <style name="secondry_text_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_style">
        <item name="android:backgroundTint">@color/my_accent_color</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:iconTint" tools:targetApi="o">@color/black</item>
    </style>

    <style name="shoes_card_text_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>